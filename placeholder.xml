<?xml version="1.0" encoding="utf-8" ?>
<extension version="3.1" type="plugin" group="system" method="upgrade">
	<name>plg_system_placeholder</name>
	<author>Bruno Batista</author>
	<creationDate>Jun 2013</creationDate>
	<copyright>Copyright (C) 2013 AtomTech, Inc. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>bruno@atomtech.com.br</authorEmail>
	<authorUrl>http://www.atomtech.com.br</authorUrl>
	<version>1.0</version>
	<description>PLG_SYSTEM_PLACEHOLDER_XML_DESCRIPTION</description>
	<scriptfile />
	<files>
		<filename plugin="placeholder">placeholder.php</filename>
		<filename>index.html</filename>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_system_placeholder.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_system_placeholder.sys.ini</language>
		<language tag="pt-BR">pt-BR/pt-BR.plg_system_placeholder.ini</language>
		<language tag="pt-BR">pt-BR/pt-BR.plg_system_placeholder.sys.ini</language>
	</languages>
	<media destination="plg_system_placeholder" folder="media">
		<folder>js</folder>
		<filename>index.html</filename>
	</media>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="minified"
					type="radio"
					class="btn-group"
					default="1"
					filter="integer"
					label="PLG_SYSTEM_PLACEHOLDER_FIELD_MINIFIED_LABEL"
					description="PLG_SYSTEM_PLACEHOLDER_FIELD_MINIFIED_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="selector"
					type="text"
					size="40"
					class="inputbox"
					filter="string"
					label="PLG_SYSTEM_PLACEHOLDER_FIELD_SELECTOR_LABEL"
					description="PLG_SYSTEM_PLACEHOLDER_FIELD_SELECTOR_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>
